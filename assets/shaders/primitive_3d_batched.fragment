#version 330
precision mediump float;

layout (location = 0) out vec4 g_albedo;
layout (location = 1) out vec4 g_normal;
layout (location = 2) out vec4 g_position;
layout (location = 3) out uvec4 g_tag;

in vec3 position;
in vec4 color;

void main() {
	g_normal = vec4(1);
	g_albedo = color;
	g_position = vec4(position, 1);
	g_tag = uvec4(0, 0, 0, 0);
}
